<%= stylesheet_link_tag 'sign_up.css' %>
<div class="signup-container">
    <h1>Credit Tracker</h1>
    <div class="signup">
        <h2>Sign up</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="field">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address" %>
            </div>
            <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
            </div>
            <div class="field">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
            </div>
            <div class="actions">
                <%= f.submit "Sign up" %>
            </div>
            <div class="social-signup">
              <%= button_tag "Sign up with Google", class: "google-signup" %>
                <!-- You'll need to replace the above line with the appropriate OAuth flow if you are using one -->
            </div>

            <div class="existing-account">
                 Already have an account? 
                    <%= render "devise/shared/links" %>
            <!-- Replace 'new_session_path(resource_name)' with your actual login path -->
            </div>
        <% end %>
        
    </div>
</div>

