<h1> Add Credit <h1>

<style>
form label {
  font-size: 16px;
}
form input[type="text"],
form select,
form input[type="date"],
form button, 
form input[type="number"] {
  font-size: 14px; 
}
.custom-button {
  width: 70px; /* Adjust the width as needed */
  height: 30px; /* Adjust the height as needed */
  font-size: 16px; /* Adjust the font size as needed */
  /* Add other styles as needed */
}

.signup-alert {
    margin-top: 10px;
    padding: 10px 15px;
    background-color: #f8d7da;   /* Light red background */
    border: 1px solid #f5c6cb;   /* Red border */
    border-radius: 4px;          /* Rounded corners */
    color: #721c24;              /* Dark red text color */
    font-weight: bold;
    text-align: center;
    width: 50 %;
  }
  
  /* Optional: Add a subtle fade-in animation for the alert */
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  .signup-alert {
    animation: fadeIn 0.5s;
  }

</style>

<%= form_with(model: @credit, local: true, html: { id: 'credit-form' }) do |form| %>

  <%= form.label :credit_type %>
  <%= form.select :credit_type, @credit_types %>

  <%= form.label :date %>
  <%= form.date_field :date %>

  <%= form.label :amount %>
  <%= form.number_field :amount %>

  <%= form.label :description %>
  <%= form.text_field :description %>

  <%= form.submit 'Submit', class: 'custom-button' %>
<% end %>
