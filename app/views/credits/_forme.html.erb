<h1> Edit Credit <h1>

<style>
form label {
  font-size: 16px;
}
form input[type="text"],
form select,
form input[type="date"],
form button, 
form input[type="number"] {
  font-size: 14px; 
}
.custom-button {
  width: 70px; /* Adjust the width as needed */
  height: 30px; /* Adjust the height as needed */
  font-size: 16px; /* Adjust the font size as needed */
  /* Add other styles as needed */
}
textarea {
    height: 50px; /* Adjust the height as needed */
    font-size: 14px; 
    width: 200px;
  }

</style>
<%= form_for @credit, url: edit_credit_path(@credit), method: :post do |f| %>
  <%= f.label :credit_type, 'Credit Type' %>
  <%= f.select :credit_type, options_for_select([['Type1', 'Type1'], ['Type2', 'Type2']], @credit.credit_type) %>

  <%= f.label :date, 'Date' %>
  <%= f.date_field :date %>

  <%= f.label :amount, 'Amount' %>
  <%= f.number_field :amount %>

  <%= f.label :description, 'Description' %>
  <%= f.text_area :description %>

  <%= f.submit 'Submit', class: 'custom-button' %>
<% end %>


  
  
