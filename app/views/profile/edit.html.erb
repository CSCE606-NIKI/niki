<%=stylesheet_link_tag 'edit_profile.css'%>
<div class ="edit-profile-container">
  <h1>Edit Profile</h1>
  <div class="edit_profile">
    <%= form_for @user, url: profile_update_path do |f| %>
      <div class="field">
          <%= f.label :name %>
          <%= f.text_field :username %>
      </div>
      <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email%>
      </div>
      <!-- Existing form fields -->
      <div class="field">
        <%= f.label :profile_pic %>
        <%= f.file_field :profile_pic %>
      </div>
      <!-- ... -->

      <div class="actions">
          <%= f.submit "Update Profile" %>
      </div>
  </div>
</div>
<% end %>

    